<?xml version='1.0' encoding='UTF-8'?>
<faces-config version="2.2"
              xmlns="http://xmlns.jcp.org/xml/ns/javaee"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd">
    <navigation-rule>
        <from-view-id>admin/produk/search.xhtml</from-view-id>
        <navigation-case>
            <from-action>#{produk.getbyid}</from-action>
            <to-view-id>admin/produk/search.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>admin/produk/update.xhtml</from-view-id>
        <navigation-case>
            <from-action>#{produk.getbyid}</from-action>
            <to-view-id>admin/produk/update.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
     <navigation-rule>
        <from-view-id>admin/contoh/update.xhtml</from-view-id>
        <navigation-case>
            <from-action>#{contoh.getbyid}</from-action>
            <to-view-id>admin/contoh/update.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    
     <navigation-rule>
        <from-view-id>/login.xhtml</from-view-id>
        <navigation-case>
            <from-action>#{admin.validatelogin}</from-action>
            <from-outcome>success</from-outcome>
            <to-view-id>/admin/dashboard.xhtml</to-view-id>
             <redirect/>
        </navigation-case>
        <navigation-case>
           <from-action>#{admin.validatelogin}</from-action>
            <from-outcome>error</from-outcome>
            <to-view-id>/login_error.xhtml</to-view-id>
             <redirect/>
        </navigation-case>
    </navigation-rule>
    
    <navigation-rule>
        <from-view-id>/login_error.xhtml</from-view-id>
        <navigation-case>
            <from-action>#{admin.validatelogin}</from-action>
            <from-outcome>success</from-outcome>
            <to-view-id>/admin/dashboard.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
           <from-action>#{admin.validatelogin}</from-action>
            <from-outcome>error</from-outcome>
            <to-view-id>/login_error.xhtml</to-view-id>
             <redirect/>
        </navigation-case>
        
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/admin/dashboard.xhtml</from-view-id>
        <navigation-case>
            <from-action>#{admin.logout}</from-action>
            <from-outcome>index</from-outcome>
            <to-view-id>/index.xhtml</to-view-id>
             <redirect/>
        </navigation-case>
    </navigation-rule>
</faces-config>
